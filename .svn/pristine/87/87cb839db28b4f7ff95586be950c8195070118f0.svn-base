<template>
  <header class="header">
    <div class="left-div">
      <slot name='left'>
        <i class="iconfont icon-return" @click='$router.go(-1)'></i>
      </slot>
    </div>
    <div class="center-div">
      <h4 class="title">{{title}}</h4>
    </div>
    <div class="right-div">
      <slot name='right'>
      </slot>
    </div>
    <div class='accountInfo' v-show='showNsrInfo'>
      <table>
        <tbody>
          <tr>
            <td style='padding-left: 0.7rem'>
              <p>纳税人识别号：{{$store.state.user.nsrInfo.nsrsbh}}</p>
              <p>名称：{{$store.state.user.nsrInfo.nsrmc}}</p>
            </td>
            <td style='vertical-align: top;'>
              <i class='iconfont icon-close' @click='showNsrInfo = false'></i>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div v-show='showMenu' class="menu-div">
      <div class='inner clearFix'>
        <div class="sanjiao">
        </div>
        <div class="menu-content">
          <div v-for='menu in menuList' @click='menuHandle(menu.id)'>
            <i class='iconfont' :class='menu.icon'></i>
            <span>{{menu.label}}</span>
          </div>
        </div>
      </div>
    </div>
  </header>
</template>
<script>
export default {
  props: {
    title: {
      type: String,
      default: ''
    },
    menuList: {
      type: Array,
      default: function() {
        return [{
          id: 1,
          icon: 'icon-people',
          label: '我的账号'
        }, {
          id: 2,
          icon: 'icon-nav-set-exit',
          label: '退出登录'
        }];
      }
    }
  },
  data() {
    return {
      showNsrInfo: false,
      showMenu: false
    }
  },
  methods: {
    showInfo() {
      this.showMenu = true;
    },
    menuHandle(id) {
      switch (id) {
        case 1:
          this.myInfo();
          break;
        case 2:
          this.signout();
          break;
        default:

          break;
      }
    },
    //退出登录
    signout() {
      let self = this;
      this.$confirm({
        content: '您确定要退出登录？',
        onConfirm() {
          self.showMenu = false;
          self.$store.dispatch('USER_SIGNOUT');
          self.$router.replace('/login');
        }
      })
    },
    myInfo() {
      this.showNsrInfo = true;
      this.showMenu = false;
    }
  },
  mounted() {
    let self = this;
    document.addEventListener('click', function(e) {
      if (e.target.classList[0] == 'menu-div') {
        self.showMenu = false;
      }
    })
  }
}
</script>
